<div class="container text-center mt-5">
  <h1> <%= @list.name %> </h1>
  <hr>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category">
        <img class="card-img mb-4" src="<%= bookmark.movie.poster_url %>" alt="">
        <h4><%= bookmark.movie.title %></h4>
          <p><%= bookmark.movie.rating %></p>
          <p> <%= bookmark.movie.overview %> </p>
          <p><%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark), :method => 'delete', class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container text-center mt-5">
  <%= link_to "Return to lists", lists_path, class: "btn btn-primary" %>
  <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
